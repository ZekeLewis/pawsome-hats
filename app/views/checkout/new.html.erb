<!DOCTYPE html>
<html>
<head>
  <title>Checkout</title>
  <!-- Include Bootstrap CSS -->
</head>
<body>
  <div class="container mt-5">
    <h1 class="text-center mb-4">Checkout</h1>

    <%= form_with(model: Order.new, url: checkout_create_path, method: :post, local: true, class: "needs-validation", novalidate: true) do |form| %>
      <div class="payment-information">
        <h2 class="mb-4">Payment Information</h2>

        <%# Hidden field for user_id %>
        <%= form.hidden_field :user_id, value: @user.id %>

        <div class="form-row">
          <div class="col-md-6 mb-3">
            <%= form.label :card_name, "Name on Card" %>
            <%= form.text_field :card_name, required: true, class: "form-control" %>
          </div>
          <div class="col-md-6 mb-3">
            <%= form.label :card_number, "Card Number" %>
            <%= form.text_field :card_number, required: true, maxlength: 16, pattern: "\\d{16}", class: "form-control" %>
          </div>
        </div>

        <div class="form-row">
          <div class="col-md-4 mb-3">
            <%= form.label :card_expiry, "Expiration Date (MM/YY)" %>
            <%= form.text_field :card_expiry, required: true, pattern: "\\d{2}/\\d{2}", class: "form-control" %>
          </div>
          <div class="col-md-4 mb-3">
            <%= form.label :card_cvc, "CVC" %>
            <%= form.text_field :card_cvc, required: true, maxlength: 4, pattern: "\\d{3,4}", class: "form-control" %>
          </div>
        </div>

        <%= form.submit "Complete Order", class: "btn btn-primary btn-lg btn-block" %>
      </div>
    <% end %>
  </div>

  <!-- Bootstrap JavaScript Bundle with Popper -->
  <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.3/dist/umd/popper.min.js"></script>
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
</body>
</html>
