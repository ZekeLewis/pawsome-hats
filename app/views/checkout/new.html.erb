
<head>
  <title>Checkout</title>
</head>
<body>
  <div class="container">
    <h1>Checkout</h1>

    <%# Display an order summary %>
    <div class="order-summary">
      <h2>Your Order</h2>
      <p><strong>Subtotal:</strong> <%= number_to_currency(@subtotal) %></p>
      <p><strong>Taxes:</strong> <%= number_to_currency(@taxes) %></p>
      <p><strong>Total:</strong> <%= number_to_currency(@total) %></p>
    </div>

    <%# Payment Information Form %>
    <%= form_with(model: Order.new, url: checkout_create_path, method: :post, local: true) do |form| %>
      <div class="payment-information">
        <h2>Payment Information</h2>

        <%# Assuming @user is the current logged-in user %>
        <%= form.hidden_field :user_id, value: @user.id %>

        <div class="form-group">
          <%= form.label :card_name, "Name on Card" %>
          <%= form.text_field :card_name, required: true %>
        </div>

        <div class="form-group">
          <%= form.label :card_number, "Card Number" %>
          <%= form.text_field :card_number, required: true, maxlength: 16, pattern: "\\d{16}" %>
        </div>

        <div class="form-group">
          <%= form.label :card_expiry, "Expiration Date (MM/YY)" %>
          <%= form.text_field :card_expiry, required: true, pattern: "\\d{2}/\\d{2}" %>
        </div>

        <div class="form-group">
          <%= form.label :card_cvc, "CVC" %>
          <%= form.text_field :card_cvc, required: true, maxlength: 4, pattern: "\\d{3,4}" %>
        </div>

        <%= form.submit "Complete Order", class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
</body>
