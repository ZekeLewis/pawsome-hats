<head>
  <title>Review Your Cart Items</title>
</head>
<body>
  <div class="container mt-4">
    <h1 class="text-center mb-4">Review Your Cart Items</h1>

    <div class="row">
      <!-- Cart details on the left -->
      <div class="col-md-6">
        <h2>Cart Items</h2>
        <% if @cart_items.empty? %>
          <p>Your cart is empty.</p>
        <% else %>
          <table class="table table-striped">
            <thead>
              <tr>
                <th>Title</th>
                <th>Price</th>
                <th>Actions</th>
                <th>Image</th>
              </tr>
            </thead>
            <tbody>
              <% @cart_items.each do |cart_item| %>
                <tr>
                  <td><%= cart_item.hat.title %></td>
                  <td><%= number_to_currency(cart_item.hat.price) %></td>
                  <td>
                    <%= button_to 'Remove', remove_cart_item_path(cart_item), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-sm" %>
                  </td>
                  <td>
                    <%= image_tag cart_item.hat.image, class: 'img-fluid' if cart_item.hat.image.attached? %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        <% end %>
      </div>

      <!-- Cart summary on the right -->
      <div class="col-md-6">
        <h2>Cart Summary</h2>
        <table class="table table-striped">
          <thead>
            <tr>
              <th colspan="2">Subtotal</th>
              <th><%= number_to_currency(@subtotal) %></th>
            </tr>
            <tr>
              <th colspan="2">Taxes (10%)</th>
              <th><%= number_to_currency(@taxes) %></th>
            </tr>
            <!-- Add shipping fee row -->
            <tr>
              <th colspan="2">Shipping</th>
              <th><%= number_to_currency(@shipping_fee) %></th>
            </tr>
            <tr>
              <th colspan="2">Promo Code</th>
              <th>
                <%= text_field_tag :promo_code %>
                <%= button_to 'Apply', apply_promo_code_path, method: :post, remote: true, class: "btn btn-primary" %>
              </th>
            </tr>
            <!-- Add discount row -->
            <tr>
              <th colspan="2">Discount</th>
              <th><%= number_to_currency(@discount) %></th>
            </tr>
            <!-- Add total after discount row -->
            <tr>
              <th colspan="2">Total After Discount</th>
              <th><%= number_to_currency(@total_after_discount) %></th>
            </tr>
            
          </thead>
        </table>
      </div>
    </div>
  </div>
</body>
